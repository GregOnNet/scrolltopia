@using Scroll.Playground.Models
@model  Scroll.Playground.ViewModels.Render<ControllerDemoCollection>

@switch (Model.RenderMode)
{
    case ERender.Menu:
        @Html.Partial("Templates/_DemoCollectionAsDropdownMenu", Model.Content);
        break;
    case ERender.Content:
        @Html.Partial("Templates/_DemoCollectionAsContent", Model.Content)
        break;
}